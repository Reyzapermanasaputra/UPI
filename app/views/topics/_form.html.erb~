<%= form_for([@topic.user, @topic]) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :avatar, "Avatar" %><br>
    <%= f.file_field :avatar, required: true %>
  </div>

   <div class="field">
    <%= f.label :identity, "Code" %><br>
    <%= f.text_area :identity, :rows => 1, required: true %>
  </div>


  <div class="field">
    <%= f.label :chs, "Chs" %><br>
    <%= f.text_area :chs, :rows => 1, required: true  %>
  </div>

  <div class="field">
    <%= f.label :level, "Course" %><br>
    <%= f.text_area :level, :rows => 1, required: true  %>
  </div>

  <div class="field">
    <%= f.label :semester %><br>
    <%= f.text_area :semester, :rows => 1, required: true  %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 2, required: true %>
  </div>

  <div class="field">
    <%= f.label :attachment, "Upload File" %><br>
    <%= f.file_field :attachment, required: true %>
  </div>


    <%= f.submit "Create topic", class: "btn btn-info" %>
    <%= link_to 'Cancel', user_topics_path(@user), class: "btn btn-danger" %>
  </div>

<% end %>
