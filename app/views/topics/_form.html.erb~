<%= form_for @topic, :html => { :multipart => true }  do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :level %><br>
    <%= f.text_area :level, :rows => 1  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 2 %>
  </div>
  <div class="field">
    <%= f.label :avatar, "input avatar" %><br>
    <%= f.file_field :avatar %>
  </div>
    <%= f.submit "Create topic", class: "btn btn-info" %>
    <%= link_to 'Cancel', topics_path, class: "btn btn-danger" %>
  </div>

<% end %>
