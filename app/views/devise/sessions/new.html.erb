<div class="mainbox col-md-5 col-md-offset-3 col-sm-5 col-sm-offset-3">
  <div class="iconupi">
    <%= image_tag('logo-upi.png', alt: 'University Education Indonesia') %>
  </div>
  <br />

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title text-center">Login</div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="panel-body">
  <div class="form-group input-group-lg">
    <%= f.label :identity, "ID" %>
    <%= f.text_field :identity, autofocus: true, placeholder:  "ID", class: "form-control", required: true%>
  </div>

  <div class="form-group input-group-lg">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <p class="text-right"><%= f.submit "Log in", class: "btn btn-default btn-sm" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
