<%= form_for @user, :html => { :multipart => true} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "Name", :style => "height: 30px;" %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, placeholder: "Email", :style => "height: 30px;"%>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "Can't be blank", :style => "height: 30px;"  %>
  </div>

  <div class="field">
    <%= collection_select(:user, :role_id, Role.all, :id, :name, {prompt: true }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
