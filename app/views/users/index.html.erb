<h1>Listing Users</h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="info">Name</th>
      <th class="info">Role</th>
      <th class="info">Email</th>
      <th colspan="3" class= "info"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-mini" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini" %></td>
        <td><%= link_to 'Destroy', user,class: "btn btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-mini" %>
