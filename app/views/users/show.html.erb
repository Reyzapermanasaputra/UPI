<h1 class="page-header">Profile</h1>
  <% if user_signed_in? and @user.role.name == "Lecturer" %>
     <div class="text-right"><%= link_to "See Courses", user_topics_path(@user.id), class: 'btn btn-large btn-default' %></div>
                  <% end %>
  <div class="container">
    <div class="row profile">
      <div class="col-xs-4">
        <div class="profile-sidebar">
	  <!-- SIDEBAR USERPIC -->
	    <div class="profile-userpic">
            <%= image_tag @user.photo.url, :width => 100, :height => 120, :crop => :fill, :class => "avatar img-circle img-thumbnail", :alt => "", :class => "img-responsive" %>
	     </div>
		<!-- END SIDEBAR USERPIC -->
		<!-- SIDEBAR USER TITLE -->
		<div class="profile-usertitle">
		  <div class="profile-usertitle-name">
		    <h2 class="text-center"><%= @user.name %></h2>
		  </div>
                  <div class="profile-usertitle-name">
                   <% @room.each do |f| %>
                       <%= f.name %>
                   <% end %>
		  </div>
                  <div class="profile-usertitle-job">
		    <%= @user.role.name %>
		  </div>
                  <div class="profile-usertitle-job">
                    <%= pluralize(@user.microposts.count, "Status") %>
		  </div>
                  <div class="profile-usertitle-job">
 		    <%= render 'shared/stats' %>
                  </div>
                    <div class="profile-usertitle-job">
                      <% if student? and admin? %>
                        <%= form_for @user, :url => {:action => "add_room"} do |f| %>
 		        <%= select_tag "adding_class",
		       options_from_collection_for_select(Classroom.all, 'id',
		       'name', @user.classrooms.map{ |j| j.id })%>
                       <%= f.submit "add classroom", :class => "btn-btn-default"%>
                       <% end %>
		     <% end %>
	 	  </div>
<br />

         </div>
		<!-- END SIDEBAR USER TITLE -->
		<!-- SIDEBAR BUTTONS -->
		<div class="profile-userbuttons">
                <% if admin? %>
		<%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-default" %>
		<%= link_to 'Back', users_path, :class => "btn btn-default"%>
                <% end %>
		</div>
		<!-- END SIDEBAR BUTTONS -->
		<!-- SIDEBAR MENU -->
		<div class="profile-usermenu">
		  <ul class="nav">
		    <li class="active">
                    <% if @course_item %>
                      <%= link_to "Courses", user_courses_path(@user.id) %>
                    <% end %>
		    <a href="#">
		     <i class="glyphicon glyphicon-home"></i>
		       <%= @user.email %> </a>
		    </li>
		    <li>
		    <a href="#">
		     <i class="glyphicon glyphicon-user"></i>
		       Joined : <%= @joined_on %> </a>
		     </li>
		    <li>
		   <a href="#" target="_blank">
		     <i class="glyphicon glyphicon-ok"></i>
			<%= @last_login %> </a>
                     </li>
		     <li>
	               <a href="#">
			  <i class="glyphicon glyphicon-flag"></i>
			<%= @user.sign_in_count %> </a>
		     </li>
		     </ul>
		     </div>
<!-- END MENU --></div>
	</div>
                <div class="col-md-8">
                  <div class="profile-content">
                    <%= render 'follow_form' if user_signed_in? %>
                    <% if  @user.microposts.any? %>
                      <h3>Microposts (<%= @user.microposts.count %>)</h3><br />
                      <ol class="microposts" %>
                        <%= render @microposts %>
                      </ol>
                    <% else %>
                      <h3><span>Nothing Status</span></h3>
                    <% end %>

                  </div>
		</div>
	</div>
</div>
