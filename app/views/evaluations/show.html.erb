<% if current_student? %>
  <% render template: "quizzes/start" %>
<% else %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @evaluation.name %>
</p>

<p>
  <strong>Password:</strong>
  <%= @evaluation.password %>
</p>

<ol>
<% for question in @evaluation.questions %>
  <li><%= h question.text %></li>
  <ul>
    <% unless question.choices.any? %>
      <li>The answer is opinion</li>
    <% end %>
  <% for choice in question.choices %>
      <li><%= h choice.text %><% if choice.correct %>
 (Correct)<% end %></li>
    <% end %>
  </ul>
<% end %>
</ol>






