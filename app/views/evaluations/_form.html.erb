<%= nested_form_for([@evaluation.topic, @evaluation]) do |f| %>
  <% if @evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
      <% @evaluation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group input-group-lg">
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name, placeholder: "type evaluation", class: "form-control" %>
  </div>

  <div class="input-group input-group-lg">
    <br>
    <strong><%= f.label :name %></strong>
    <%= f.text_field :password, placeholder: "password", class: "form-control" %>
  </div>
  <br />

  <%= f.fields_for :questions do |builder| %>
    <%= render 'questions_field', :f => builder %>
  <% end %>
  <%= f.link_to_add "Add Question", :questions,  class: "fa fa-plus text-primary" %>
  <br />
  <div class="actions">
    <%= f.submit "create", class: "btn btn-primary" %>
  </div>
<% end %>
