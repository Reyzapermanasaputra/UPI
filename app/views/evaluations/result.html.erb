<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @evaluation.name %>
</p>

<p>
  <strong>Password:</strong>
  <%= @evaluation.password %>
</p>

<h4> <%= @evaluation.quizzes.size %> completed </h4>

<table class="table table-hover">
  <thead>
    <tr>
      <hr />
      <th>Name</th>
      <th>Classroom</th>
      <th>Date Quiz</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @evaluation.quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.user.name %></td>
      <td><%= quiz.user.classrooms.collect{ |a| a.name }.join(" ") %></td>
      <td><%= quiz.created_at.to_formatted_s(:long) %></td>
      <td><%= link_to 'Check', topic_evaluation_show_result_path(@evaluation.topic, @evaluation) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
