      <th>Name</th>
      <th>Password</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.name %></td>
        <td><%= evaluation.password %></td>
        <% if current_student? %>
        <%= form_tag({controller: "quiz", action: "start"}) do %>

       <td><%= submit_tag "start", class: "btn btn-default" %></td>
       <% end %>
       <% else %>
        <td><%= link_to 'Show', [evaluation.topic, evaluation] %></td>
        <td><%= link_to 'Edit', edit_topic_evaluation_path(evaluation.topic, evaluation) %></td>
        <td><%= link_to 'Destroy', [evaluation.topic, evaluation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

